-- Luckboard Auto Rejoin Script with Toggle UI (Delta Mobile Supported) -- Rejoins until Workspace.MapDecorations.Luckboard is found

-- Services local Players = game:GetService("Players") local TeleportService = game:GetService("TeleportService") local RunService = game:GetService("RunService")

-- Player local player = Players.LocalPlayer

-- Toggle Variables local searching = true local placeId = game.PlaceId

-- Rainbow Text Function local function updateRainbowText(textLabel) local counter = 0 RunService.RenderStepped:Connect(function() counter = counter + 0.01 local r = math.sin(counter) * 127 + 128 local g = math.sin(counter + 2) * 127 + 128 local b = math.sin(counter + 4) * 127 + 128 textLabel.TextColor3 = Color3.fromRGB(r, g, b) end) end

-- UI Setup local screenGui = Instance.new("ScreenGui", player:WaitForChild("PlayerGui")) screenGui.ResetOnSpawn = false

local toggleButton = Instance.new("TextButton") toggleButton.Size = UDim2.new(0, 200, 0, 50) toggleButton.Position = UDim2.new(0, 10, 0, 100) toggleButton.BackgroundTransparency = 0.5 toggleButton.BackgroundColor3 = Color3.new(0, 0, 0) toggleButton.Text = "Luckboard Hopper: ON" toggleButton.Font = Enum.Font.SciFi toggleButton.TextSize = 20 toggleButton.Parent = screenGui

-- Apply Rounded Corners local corner = Instance.new("UICorner") corner.CornerRadius = UDim.new(0, 10) corner.Parent = toggleButton

updateRainbowText(toggleButton)

-- Toggle Function local function toggle() searching = not searching toggleButton.Text = "Luckboard Hopper: " .. (searching and "ON" or "OFF") end

toggleButton.MouseButton1Click:Connect(toggle)

-- Search Loop spawn(function() while true do wait(5) if searching then local success, exists = pcall(function() return game.Workspace:FindFirstChild("MapDecorations") and game.Workspace.MapDecorations:FindFirstChild("Luckboard") end)

if exists then
            print("Luckboard found! Stopping rejoin.")
            toggleButton.Text = "Luckboard Hopper: Found âœ…"
            searching = false
        else
            print("Luckboard not found. Rejoining...")
            TeleportService:Teleport(placeId, player)
        end
    end
end

end)

