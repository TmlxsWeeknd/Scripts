-- UI Setup
local ScreenGui = Instance.new("ScreenGui", game.CoreGui)
local Toggle = Instance.new("TextButton")

ScreenGui.Name = "LuckboardFinderUI"
ScreenGui.ResetOnSpawn = false

Toggle.Name = "LuckboardToggle"
Toggle.Parent = ScreenGui
Toggle.BackgroundColor3 = Color3.fromRGB(0, 0, 0)
Toggle.BackgroundTransparency = 0.5
Toggle.BorderSizePixel = 0
Toggle.Position = UDim2.new(0, 10, 0, 100)
Toggle.Size = UDim2.new(0, 220, 0, 40)
Toggle.Text = "Luckboard Hopper: ON"
Toggle.TextColor3 = Color3.fromRGB(255, 255, 255)
Toggle.Font = Enum.Font.SciFi
Toggle.TextSize = 20
Toggle.AutoButtonColor = false
Toggle.TextWrapped = true
Toggle.ClipsDescendants = true

-- Rainbow effect
task.spawn(function()
	while true do
		for hue = 0, 1, 0.01 do
			Toggle.TextColor3 = Color3.fromHSV(hue, 1, 1)
			task.wait(0.05)
		end
	end
end)

-- Rounded corners
local UICorner = Instance.new("UICorner")
UICorner.CornerRadius = UDim.new(0, 12)
UICorner.Parent = Toggle

-- Logic
local running = true

function checkForLuckboard()
	local success, result = pcall(function()
		return game.Workspace:FindFirstChild("MapDecorations") and game.Workspace.MapDecorations:FindFirstChild("Luckboard")
	end)
	return success and result
end

function rejoinLoop()
	while running do
		if checkForLuckboard() then
			Toggle.Text = "Luckboard Found! ✅"
			break
		else
			Toggle.Text = "Luckboard Not Found ❌ | Rejoining..."
			task.wait(5)
			game:GetService("TeleportService"):TeleportToPlaceInstance(game.PlaceId, game.JobId, game.Players.LocalPlayer)
		end
	end
end

Toggle.MouseButton1Click:Connect(function()
	running = not running
	Toggle.Text = running and "Luckboard Hopper: ON" or "Luckboard Hopper: OFF"
	if running then
		rejoinLoop()
	end
end)

-- Auto-start the loop
rejoinLoop()
